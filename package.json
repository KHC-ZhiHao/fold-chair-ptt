{
  "name": "fold-chair-ptt",
  "private": true,
  "version": "0.0.1",
  "author": "khczhihao",
  "main": "dist/main.js",
  "scripts": {
    "vite:dev": "vite",
    "vite:build": "vue-tsc --noEmit && vite build",
    "dev": "concurrently vite \" electron ./main.js\"",
    "build": "npm run vite:build && node build && electron-builder",
    "preview": "npm run vite:build && node build && electron ."
  },
  "build": {
    "appId": "fold-chair-ptt",
    "productName": "Fold Chair PTT",
    "asar": true,
    "directories": {
      "buildResources": "public",
      "output": "release/app"
    },
    "files": [
      "./dist/**/*"
    ],
    "mac": {
      "icon": "./public/icons/mac.icns",
      "artifactName": "fold-chair-ptt.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "./public/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "fold-chair-ptt.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "@mdi/font": "^7.2.96",
    "@types/request": "^2.48.8",
    "animate.css": "^4.1.1",
    "axios": "^1.4.0",
    "cheerio": "^1.0.0-rc.12",
    "dayjs": "^1.11.9",
    "power-helper": "^0.6.6",
    "request": "^2.88.2",
    "util": "^0.12.5",
    "vue": "^3.3.4",
    "vuetify": "^3.3.9"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-standard": "^8.0.1",
    "@vue/eslint-config-typescript": "^11.0.3",
    "concurrently": "^7.6.0",
    "electron": "^25.3.1",
    "electron-builder": "^24.4.0",
    "eslint": "^8.40.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vue": "^9.11.1",
    "pinia": "^2.1.4",
    "typescript": "^5.1.6",
    "vite": "^4.4.5",
    "vite-plugin-checker": "^0.6.1",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-vuetify": "^1.0.2",
    "vue-eslint-parser": "^9.2.1",
    "vue-router": "^4.2.4e",
    "vue-tsc": "^1.8.5"
  }
}
